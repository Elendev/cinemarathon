{
  "name": "cinemarathon.ch",
  "version": "1.0.0",
  "description": "Cinemarathon front-end website",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && webpack --mode=production",
    "build-dev": "rm -rf ./dist && webpack --mode=development",
    "watch": "webpack --watch --info-verbosity verbose --mode=development",
    "serve": "webpack-serve --mode=development",
    "lint": "tslint -c tslint.json src/**/*.{ts,tsx}",
    "lint-fix": "npm run lint -- --fix",
    "test": "npm run lint && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elendev"
  },
  "keywords": [
    "react",
    "redux",
    "typescript",
    "pathe"
  ],
  "author": "Jonas Renaudot <jonas.renaudot@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "react-test-renderer": "^16.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@types/node": "^9.6.18",
    "awesome-typescript-loader": "^5.0.0",
    "enzyme": "^3.3.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.0.1",
    "postcss-loader": "^2.1.5",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.4",
    "webpack-serve": "^1.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
